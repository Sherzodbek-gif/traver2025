    const countryStartDates = {
      "Italy": { "Econom": "2025-11-01", "Standard": "2025-11-03", "Lux": "2025-11-05" },
      "Kazakhstan": { "Econom": "2025-10-20", "Standard": "2025-10-22", "Lux": "2025-10-25" },
      "France": { "Econom": "2025-12-01", "Standard": "2025-12-03", "Lux": "2025-12-05" },
      "Spain": { "Econom": "2025-11-03", "Standard": "2025-11-05", "Lux": "2025-11-08" },
      "Germany": { "Econom": "2025-11-10", "Standard": "2025-11-12", "Lux": "2025-11-15" }
    };

    const packageContents = {
      "Italy": {
        "Econom": ["“ö–æ–Ω–∞“õ“Ø–π: 3 –∂“±–ª–¥—ã–∑","–¢–∞“£“ì—ã –∞—Å","–†–∏–º —ç–∫—Å–∫—É—Ä—Å–∏—è—Å—ã","–ê–≤—Ç–æ–±—É—Å —Ç–∞—Å—ã–º–∞–ª—ã","–°–∞“õ—Ç–∞–Ω–¥—ã—Ä—É: –±–∞—Ä"],
        "Standard": ["“ö–æ–Ω–∞“õ“Ø–π: 4 –∂“±–ª–¥—ã–∑","–¢–∞“£“ì—ã + —Ç“Ø—Å–∫—ñ –∞—Å","–†–∏–º + –§–ª–æ—Ä–µ–Ω—Ü–∏—è —ç–∫—Å–∫—É—Ä—Å–∏—è—Å—ã","–ê–≤—Ç–æ–±—É—Å + –ø–æ–π—ã–∑","–°–∞“õ—Ç–∞–Ω–¥—ã—Ä—É: –±–∞—Ä","–°—É —Å–ø–æ—Ä—Ç —Ç“Ø—Ä–ª–µ—Ä—ñ","–ì–∏–¥"],
        "Lux": ["“ö–æ–Ω–∞“õ“Ø–π: 5 –∂“±–ª–¥—ã–∑","–ë–∞—Ä–ª—ã“õ —Ç–∞–º–∞“õ","–ò—Ç–∞–ª–∏—è —Ç–æ–ª—ã“õ —Ç—É—Ä","VIP —Ç–∞—Å—ã–º–∞–ª–¥–∞—É","–°–ø–∞ –∂”ô–Ω–µ –º–∞—Å—Å–∞–∂","–ì–∏–¥ 24/7","–®–æ–ø–∏–Ω–≥ —Ç—É—Ä","–§–æ—Ç–æ/–≤–∏–¥–µ–æ “õ—ã–∑–º–µ—Ç—ñ"]
      },
      "Kazakhstan": {
        "Econom": ["“ö–æ–Ω–∞“õ“Ø–π: 3 –∂“±–ª–¥—ã–∑","–¢–∞“£“ì—ã –∞—Å","–®—ã–º–∫–µ–Ω—Ç —ç–∫—Å–∫—É—Ä—Å–∏—è—Å—ã","–ê–≤—Ç–æ–±—É—Å —Ç–∞—Å—ã–º–∞–ª—ã","–°–∞“õ—Ç–∞–Ω–¥—ã—Ä—É: –±–∞—Ä"],
        "Standard": ["“ö–æ–Ω–∞“õ“Ø–π: 4 –∂“±–ª–¥—ã–∑","–¢–∞“£“ì—ã + —Ç“Ø—Å–∫—ñ –∞—Å","–ê–ª–º–∞—Ç—ã + –ê—Å—Ç–∞–Ω–∞ —ç–∫—Å–∫—É—Ä—Å–∏—è—Å—ã","–ê–≤—Ç–æ–±—É—Å + –ø–æ–π—ã–∑","–°–∞“õ—Ç–∞–Ω–¥—ã—Ä—É: –±–∞—Ä","–ì–∏–¥ “õ—ã–∑–º–µ—Ç—ñ"],
