      }
    };

    // DOM
    const countryEl = document.getElementById('country');
    const packageTypeEl = document.getElementById('packageType');
    const daysEl = document.getElementById('days');
    const peopleEl = document.getElementById('people');
    const startDateEl = document.getElementById('startDate');
    const endDateEl = document.getElementById('endDate');
    const packageItemsUl = document.getElementById('packageItems');
    const totalPriceEl = document.getElementById('totalPrice');

    const toPersonalBtn = document.getElementById('toPersonal');
    const personalWrap = document.getElementById('personalWrap');
    const pillStep1 = document.getElementById('pill-step-1');
    const pillStep2 = document.getElementById('pill-step-2');
    const backToChooseBtn = document.getElementById('backToChoose');
    const bookingForm = document.getElementById('bookingForm');

    // Update package details list
    function updatePackageDetails(){
      packageItemsUl.innerHTML = '';
      const country = countryEl.value;
      const pkg = packageTypeEl.value;
      if(country && pkg && packageContents[country] && packageContents[country][pkg]){
        packageContents[country][pkg].forEach(item=>{
          const li = document.createElement('li');
          li.textContent = item;
          packageItemsUl.appendChild(li);
        });
      } else {
        packageItemsUl.innerHTML = '<li>–ü–∞–∫–µ—Ç —Ç—É—Ä–∞–ª—ã –∞“õ–ø–∞—Ä–∞—Ç—Ç—ã –∫”©—Ä–≥—ñ“£—ñ–∑ –∫–µ–ª—Å–µ ‚Äî –µ–ª –º–µ–Ω –ø–∞–∫–µ—Ç —Ç“Ø—Ä—ñ–Ω —Ç–∞“£–¥–∞“£—ã–∑.</li>';
      }
    }

    // Update dates based on country start dates and days
    function updateDates(){
      const country = countryEl.value;
      const pkg = packageTypeEl.value;
      const days = parseInt(daysEl.value);
      if(country && pkg && days && countryStartDates[country] && countryStartDates[country][pkg]){
        const start = new Date(countryStartDates[country][pkg]);
        startDateEl.value = start.toISOString().split('T')[0];
        const end = new Date(start);
        end.setDate(start.getDate() + days);
        endDateEl.value = end.toISOString().split('T')[0];
      } else {
        startDateEl.value = '';
        endDateEl.value = '';
      }
    }

    // Calculate total price (in KZT like original)
    function calculateTotal(){
      const country = countryEl.value;
      const pkg = packageTypeEl.value;
      const days = parseInt(daysEl.value);
      const people = parseInt(peopleEl.value) || 0;
      if(country && pkg && days && people && packagePrices[country] && packagePrices[country][pkg]){
        const pricePerPerson = packagePrices[country][pkg][days];
        if(typeof pricePerPerson === 'number'){
          const total = pricePerPerson * people;
          // display using kazakh/ru-locale format
          totalPriceEl.textContent = total.toLocaleString('kk-KZ');
          return;
        }
      }
      totalPriceEl.textContent = '0';
    }

    // Update everything helper
    function updateAll(){ updatePackageDetails(); updateDates(); calculateTotal(); }

    // listeners
    [countryEl, packageTypeEl, daysEl].forEach(el => el.addEventListener('change', updateAll));
    peopleEl.addEventListener('input', calculateTotal);

    // go to personal step
    toPersonalBtn.addEventListener('click', () => {
      // Validate step1 required fields
      if(!countryEl.value || !packageTypeEl.value || !daysEl.value || !peopleEl.value){
        alert('–ë–∞—Ä–ª—ã“õ ”©—Ä—ñ—Å—Ç–µ—Ä–¥—ñ (–µ–ª, –ø–∞–∫–µ—Ç, –∫“Ø–Ω–¥–µ—Ä, –∞–¥–∞–º —Å–∞–Ω—ã) —Ç–æ–ª—Ç—ã—Ä—É “õ–∞–∂–µ—Ç.');
        return;
      }
      // open personal area (smooth)
      personalWrap.classList.add('open');
      pillStep1.classList.remove('active');
      pillStep2.classList.add('active');
      // scroll to personal area smoothly
      setTimeout(()=> {
        const rect = personalWrap.getBoundingClientRect();
        window.scrollBy({top: rect.top - 24, behavior:'smooth'});
      }, 120);
    });

    backToChooseBtn.addEventListener('click', () => {
      personalWrap.classList.remove('open');
      pillStep2.classList.remove('active');
      pillStep1.classList.add('active');
      window.scrollTo({top: document.querySelector('.card').offsetTop - 18, behavior:'smooth'});
    });

    // On submit
    bookingForm.addEventListener('submit', (e) => {
      e.preventDefault();
      // Basic validation for personal fields
      const name = document.getElementById('fullName').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const email = document.getElementById('email').value.trim();
      if(!name || !phone || !email){
        alert('–ë–∞—Ä–ª—ã“õ –∂–µ–∫–µ –º”ô–ª—ñ–º–µ—Ç—Ç–µ—Ä–¥—ñ —Ç–æ–ª—Ç—ã—Ä—ã“£—ã–∑ (–∞—Ç—ã, —Ç–µ–ª–µ—Ñ–æ–Ω, email).');
        return;
      }

      // Gather summary (you can send it to server here)
      const summary = {
        package: packageTypeEl.value + ' ‚Äî ' + (countryEl.value || ''),
        days: daysEl.value,
        people: peopleEl.value,
        startDate: startDateEl.value,
        endDate: endDateEl.value,
        total: totalPriceEl.textContent + ' KZT',
        client: { name, phone, email, notes: document.getElementById('notes').value || '' }
      };

      // For demo: show confirmation
      const niceMsg = `–†–∞—Ö–º–µ—Ç, ${name}!\n\n–°—ñ–∑–¥—ñ“£ –±—Ä–æ–Ω–¥–∞—É—ã“£—ã–∑ “õ–∞–±—ã–ª–¥–∞–Ω–¥—ã.\n\n–ù–µ–≥—ñ–∑–≥—ñ –º”ô–ª—ñ–º–µ—Ç—Ç–µ—Ä:\n${summary.package}, ${summary.days} –∫“Ø–Ω, ${summary.people} –∞–¥–∞–º\n–ë–∞—Å—Ç–∞–ª—É: ${summary.startDate}\n–ñ–∞–ª–ø—ã –±–∞“ì–∞: ${summary.total}\n\n–ë—ñ–∑ —Å—ñ–∑–±–µ–Ω –∂–∞“õ—ã–Ω –∞—Ä–∞–¥–∞ –±–∞–π–ª–∞–Ω—ã—Å–∞–º—ã–∑.`;
      alert(niceMsg);

      // Reset form to initial
      bookingForm.reset();
      updateAll();
      personalWrap.classList.remove('open');
      pillStep2.classList.remove('active');
      pillStep1.classList.add('active');
      window.scrollTo({top: document.querySelector('.card').offsetTop - 18, behavior:'smooth'});
    });

    // init
    updatePackageDetails();
    calculateTotal();
  </script>
</body>
